{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for feature-based architecture */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@config/*": ["./src/config/*"],
      "@styles/*": ["./src/styles/*"],
      
      /* Feature-specific paths (optional) */
      "@payments/*": ["./src/features/payments/*"],
      "@merchants/*": ["./src/features/merchants/*"],
      "@customers/*": ["./src/features/customers/*"],
      "@orders/*": ["./src/features/orders/*"],
      "@refunds/*": ["./src/features/refunds/*"],
      "@disputes/*": ["./src/features/disputes/*"],
      "@billing/*": ["./src/features/billing/*"],
      "@settlements/*": ["./src/features/settlements/*"],
      "@products/*": ["./src/features/products/*"],
      "@auth/*": ["./src/features/auth/*"],
      "@risk/*": ["./src/features/risk/*"],
      "@analytics/*": ["./src/features/analytics/*"],
      "@terminals/*": ["./src/features/terminals/*"]
    }
  },
  "include": ["src"]
}